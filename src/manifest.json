{
  "name": "Insta Ghost",
  "version": "2.0",
  "manifest_version": 3,
  "description": "A browser extension for Instagram to see stories without seen.",
  "background": {
    "service_worker": "script.js"
  },
  "action": {
    "default_icon": {
      "16": "logo/logo16.png",
      "48": "logo/logo48.png",
      "128": "logo/logo128.png"
    }
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://*.instagram.com/*"
  ],
  "icons": {
    "16": "logo/logo16.png",
    "48": "logo/logo48.png",
    "128": "logo/logo128.png"
  }
}